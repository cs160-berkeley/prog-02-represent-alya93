<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:padding="3dp"
    android:gravity="center_vertical"
    android:weightSum="3">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/representative_image"
        android:maxHeight="97dp"
        android:maxWidth="73dp"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/representative_info"
        android:weightSum="1"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/representative_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="24dp"
            android:adjustViewBounds="true"
            android:id="@+id/icons"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:onClick="moreInfo"
            android:id="@+id/representative_more_info_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/twitterfeed"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tweets"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lasttweet"/>

    </LinearLayout>

</LinearLayout>